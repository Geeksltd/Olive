<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>Olive.Entities.Data.MySql</PackageId>
    <Version>1.0.27</Version>
    <Title>Olive Entities Data MySql</Title>
    <Authors>Geeks Ltd</Authors>
    <PackageProjectUrl>https://github.com/Geeksltd/Olive</PackageProjectUrl>
    <PackageIconUrl>http://licensing.msharp.co.uk/Images/OliveComponent.png</PackageIconUrl>
    <Copyright>Copyright Â©2018 Geeks Ltd - All rights reserved.</Copyright>
    <Description>Olive Framework</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>..\bin\</OutputPath>
    <DocumentationFile>..\bin\netstandard2.0\Olive.Entities.Data.MySql.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591;1573;NU1701</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <None Include="MySqlDataProvider.Criteria.cs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="GCop.All.Geeks" Version="2.4.4" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.1" />
    <PackageReference Include="MySqlConnector" Version="0.46.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Olive">
      <HintPath>..\bin\netstandard2.0\Olive.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities">
      <HintPath>..\bin\netstandard2.0\Olive.Entities.dll</HintPath>
    </Reference>
    <Reference Include="Olive.Entities.Data">
      <HintPath>..\bin\netstandard2.0\Olive.Entities.Data.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="update-local-nuget-cache $(ProjectPath) $(TargetPath) $(TargetName)" />
  </Target>

</Project>
